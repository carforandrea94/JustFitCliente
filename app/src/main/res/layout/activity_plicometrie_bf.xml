<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sfondo"
    tools:context="com.example.andreacarfora.justfit_cliente.Activities.ProfiloActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <ImageView
                android:id="@+id/closepliche"
                android:layout_width="@dimen/sizeIcon"
                android:layout_height="@dimen/sizeIcon"
                android:layout_alignParentStart="true"
                android:layout_margin="3dp"
                android:src="@drawable/ic_close"
                android:tint="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Aggiorna Body Fat"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/sizeTextToolbar" />

            <ImageView
                android:id="@+id/chekpliche"
                android:layout_width="@dimen/sizeIcon"
                android:layout_height="@dimen/sizeIcon"
                android:layout_alignParentEnd="true"
                android:layout_margin="3dp"
                android:src="@drawable/ic_check"
                android:tint="@color/colorPrimaryDark"/>


        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/headerUppBf"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/titleBF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body Fat"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:textColor="@color/amber"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/percentualeBF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleBF"
                        android:text="--%"
                        android:textAlignment="center"
                        android:textColor="@color/primary_text"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageGender"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/male_white"
                        android:tint="@color/txt_profile" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/headerUppBf"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imag1"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/sizeIcon"
                        android:layout_height="@dimen/sizeIcon"
                        android:tint="@color/amber"
                        android:src="@drawable/plicometro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSection"
                        android:layout_toRightOf="@+id/imag1"
                        android:text="Plicometrie"/>



                </RelativeLayout>


                <include
                    layout="@layout/layout_divider" />



                <RelativeLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageM1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:contentDescription="@string/email"
                    android:src="@drawable/chest"
                     />

                    <EditText
                        android:id="@+id/editM1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageM1"
                        android:textStyle="bold"
                        android:hint="Pliche Petto"
                        android:textAlignment="textEnd"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="@dimen/textSection"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_toEndOf="@id/imageM1"
                        android:text="mm"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textLabel" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageM2"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:contentDescription="@string/email"
                        android:src="@drawable/abs"
                        />

                    <EditText
                        android:id="@+id/editM2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageM2"
                        android:textStyle="bold"
                        android:hint="Pliche Addome"
                        android:textAlignment="textEnd"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="@dimen/textSection"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_toEndOf="@id/imageM2"
                        android:text="mm"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textLabel" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageM3"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:contentDescription="@string/email"
                        android:src="@drawable/leg"
                        />

                    <EditText
                        android:id="@+id/editM3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageM3"
                        android:textStyle="bold"
                        android:hint="Pliche Quadricipite"
                        android:textAlignment="textEnd"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="@dimen/textSection"
                        android:textColor="@color/primary_text"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_toEndOf="@id/imageM3"
                        android:text="mm"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textLabel" />
                </RelativeLayout>


            </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:text="CALCOLA"
                android:textSize="@dimen/textSection"
                android:id="@+id/calcolaBf"
                android:background="@color/txt_profile"/>

        </RelativeLayout>
</LinearLayout>