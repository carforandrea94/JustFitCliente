<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:clickable="true"
    android:longClickable="true"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/telefono"
        android:src="@drawable/weight_kilogram"
        android:tint="@color/colorPrimaryDark" />




    <TextView
        android:id="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/imag3"
        android:text="93.0 kg"
        android:textStyle="italic|bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/dataOfPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/peso"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imag3"
        android:hint="@string/telefono"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textProfiloNameCard" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="21dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrowPeso"
            android:layout_width="30dp"
            android:elevation="5dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/differenzaPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+4"
            android:elevation="4dp"
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            />


    </LinearLayout>

</RelativeLayout>